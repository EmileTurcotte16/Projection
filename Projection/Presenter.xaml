<UserControl x:Class="Projection.Presenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projection"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="PresenterGrid">
        <!--Images et vidéos-->
        <MediaElement x:Name="Media" Panel.ZIndex="1" MediaEnded="Loop" LoadedBehavior="Manual" UnloadedBehavior="Manual" MaxWidth="{Binding ElementName=PresenterGrid, Path=ActualWidth}" MaxHeight="{Binding ElementName=PresenterGrid, Path=ActualHeight}"/>
    </Grid>
</UserControl>
